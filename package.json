{
	"name": "fastify-api-starter",
	"version": "1.0.0",
	"description": "Fastify, Drizzle, Typescript with JWT auth + RBAC",
	"license": "MIT",
	"author": "Neemias Barcelos",
	"main": "server.js",

	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsup",
		"start": "node dist/server.js",
		"biome:format": "pnpm biome format --write",
		"biome:lint": "pnpm biome check --write",
		"biome:check": "pnpm biome check --write",
		"db:studio": "pnpm drizzle-kit studio",
		"db:push": "pnpm drizzle-kit push",
		"db:generate": "pnpm drizzle-kit generate",
		"db:migrate": "tsx src/db/migrate.ts",
		"db:seed": "tsx src/db/seed.ts",
		"db:reset": "tsx src/db/reset.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@casl/ability": "^6.7.3",
		"@fastify/cors": "^10.0.2",
		"@fastify/jwt": "^9.0.4",
		"@fastify/swagger": "^9.4.2",
		"@scalar/fastify-api-reference": "^1.25.118",
		"bcryptjs": "^2.4.3",
		"drizzle-orm": "^0.39.3",
		"drizzle-seed": "^0.3.1",
		"fastify": "^5.2.1",
		"fastify-type-provider-zod": "^4.0.2",
		"pg": "^8.13.3",
		"readline-sync": "^1.4.10",
		"vite-tsconfig-paths": "^5.1.4",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@paralleldrive/cuid2": "^2.2.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/node": "^22.13.2",
		"@types/pg": "^8.11.11",
		"@types/readline-sync": "^1.4.8",
		"@types/supertest": "^6.0.2",
		"@vitest/coverage-v8": "^3.0.5",
		"@vitest/ui": "^3.0.5",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.30.4",
		"pino-pretty": "^13.0.0",
		"supertest": "^7.0.0",
		"tsup": "^8.3.6",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vitest": "^3.0.5"
	}
}
